{% extends 'ColmenappPlataformaBundle::layout.html.twig' %}


{% block page_title %}
    Vista General
{% endblock %}

{% block page_subtitle %}
    Subtitulo
{% endblock %}

{% block avanzu_breadcrumb %}
    {{ render(controller('AvanzuAdminThemeBundle:Breadcrumb:breadcrumb', {'request':app.request, 'title' : block('page_title')})) }}
{% endblock %}

{% block page_content %}
    <div class="row">
        <div class="col-md-3 col-sm-6 col-xs-12">
            <div class="info-box bg-aqua">
                <span class="info-box-icon"><i class="fa fa-cubes"></i></span>
                <div class="info-box-content">
                    <span class="info-box-text">Apiarios</span>
                    <span class="info-box-number">4</span>
                    <div class="progress">
                        <div class="progress-bar" style="width: 70%"></div>
                    </div>
          <span class="progress-description">
            Ver Apiarios
          </span>
                </div><!-- /.info-box-content -->
            </div><!-- /.info-box -->
        </div><!-- /.col -->
        <div class="col-md-3 col-sm-6 col-xs-12">
            <div class="info-box bg-green">
                <span class="info-box-icon"><i class="fa fa-archive"></i></span>
                <div class="info-box-content">
                    <span class="info-box-text">Colmenas</span>
                    <span class="info-box-number">349</span>
                    <div class="progress">
                        <div class="progress-bar" style="width: 70%"></div>
                    </div>
          <span class="progress-description">
            Ver Colmenas
          </span>
                </div><!-- /.info-box-content -->
            </div><!-- /.info-box -->
        </div><!-- /.col -->
        <div class="col-md-3 col-sm-6 col-xs-12">
            <div class="info-box bg-yellow">
                <span class="info-box-icon"><i class="fa fa-bullhorn"></i></span>
                <div class="info-box-content">
                    <span class="info-box-text">Alertas Activas</span>
                    <span class="info-box-number">8</span>
                    <div class="progress">
                        <div class="progress-bar" style="width: 70%"></div>
                    </div>
          <span class="progress-description">
            Ver Alertas
          </span>
                </div><!-- /.info-box-content -->
            </div><!-- /.info-box -->
        </div><!-- /.col -->
        <div class="col-md-3 col-sm-6 col-xs-12">
            <div class="info-box bg-red">
                <span class="info-box-icon"><i class="fa fa-area-chart"></i></span>
                <div class="info-box-content">
                    <span class="info-box-text">Estadísticas</span>
                    <span class="info-box-number">10</span>
                    <div class="progress">
                        <div class="progress-bar" style="width: 70%"></div>
                    </div>
          <span class="progress-description">
            Ver todas las estadísticas
          </span>
                </div><!-- /.info-box-content -->
            </div><!-- /.info-box -->
        </div><!-- /.col -->
    </div>

{% endblock %}





