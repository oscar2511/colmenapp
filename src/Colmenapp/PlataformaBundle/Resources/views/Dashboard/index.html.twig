{% extends 'ColmenappPlataformaBundle::layout.html.twig' %}


{% block page_title %}
    Vista General
{% endblock %}

{% block page_subtitle %}
    <br>
    Apiario Los Algarrobos
{% endblock %}

{% block avanzu_breadcrumb %}
    {{ render(controller('AvanzuAdminThemeBundle:Breadcrumb:breadcrumb', {'request':app.request, 'title' : block('page_title')})) }}
{% endblock %}

{% block page_content %}
<section ng-controller="dashboardController">
    <div class="row">
        <div class="col-md-8">
            <div class="col-md-6 col-sm-6 col-xs-8">
                <div class="info-box bg-green">
                    <span class="info-box-icon"><i class="fa fa-archive"></i></span>
                    <div class="info-box-content">
                        <span class="info-box-text">Colmenas</span>
                        <span class="info-box-number">349</span>
                        <div class="progress">
                            <div class="progress-bar" style="width: 70%"></div>
                        </div>
                        <span class="progress-description">
                          Ver Colmenas
                        </span>
                    </div>
                </div>
                <!----------- grafico productividad ----->
                <br>
                <div class="box box-primary">
                    <div class="box-header">
                        <h3 class="box-title">Productividad del apiario (kg/temporada)</h3>
                    </div>
                    <div class="box-body">
                        <canvas id="bar"
                                class="chart chart-bar"
                                chart-data             = "data"
                                chart-labels           = "labels"
                                chart-series           = "series"
                                chart-click="onClick">
                        </canvas>
                    </div>
                </div>
            </div><!-- /.col -->

            <div class="col-md-6 col-sm-6 col-xs-8">
                <div class="info-box bg-yellow">
                    <span class="info-box-icon"><i class="fa fa-bullhorn"></i></span>
                    <div class="info-box-content">
                        <span class="info-box-text">Alertas Activas</span>
                        <span class="info-box-number">8</span>
                        <div class="progress">
                            <div class="progress-bar" style="width: 70%"></div>
                        </div>
                        <span class="progress-description">
                           Ver Alertas
                        </span>
                    </div>
                </div>

                <!----------- grafico clima ----->
                <br>
                <div class="box box-default">
                    <div class="box-header">
                        <h3 class="box-title">Información del clima</h3>
                    </div>
                    <div class="box-body">
                        <canvas id="line"
                                class="chart chart-line"
                                chart-data             = "data"
                                chart-labels           = "labels"
                                chart-series           = "series"
                                chart-click="onClick">
                        </canvas>
                    </div>
                </div>
            </div>
        </div>
        <!-------------------------------------->
        <div class="col-md-4">
            <div class="box box-primary">
                <div class="box-header">
                    <h3 class="box-title">Últimas visitas/inspecciones</h3>
                </div>
                <div class="box-body">
                    <ul class="timeline">
                        <!-- timeline time label -->
                        <li class="time-label">
                            <span class="bg-red">
                                10 Diciembre 2016
                            </span>
                        </li>
                        <li>
                            <i class="fa fa-forumbee bg-blue"></i>
                            <div class="timeline-item">
                                <span class="time"><i class="fa fa-clock-o"></i> 3/12/2016</span>
                                <h3 class="timeline-header"><a href="#">Inspección a colmena 43</a></h3>
                                <div class="timeline-body">
                                    Estado de reina: Bueno
                                    <br>
                                    Trabajo realizado: Retirar cuadros rotos
                                </div>
                                <div class="timeline-footer">
                                    <a class="btn btn-primary btn-xs">Ver inspección</a>
                                </div>
                            </div>
                        </li>
                        <li>
                            <i class="fa fa-forumbee bg-blue"></i>
                            <div class="timeline-item">
                                <span class="time"><i class="fa fa-clock-o"></i> 3/12/2016</span>
                                <h3 class="timeline-header"><a href="#">Inspección a colmena 22</a></h3>
                                <div class="timeline-body">
                                    Estado de reina: Bueno
                                    <br>
                                    Trabajo realizado: Ninguno
                                </div>
                                <div class="timeline-footer">
                                    <a class="btn btn-primary btn-xs">Ver inspección</a>
                                </div>
                            </div>
                        </li>
                        <li>
                            <i class="fa fa-forumbee bg-blue"></i>
                            <div class="timeline-item">
                                <span class="time"><i class="fa fa-clock-o"></i> 23/11/2016</span>
                                <h3 class="timeline-header"><a href="#">Inspección a colmena 271</a></h3>
                                <div class="timeline-body">
                                    Estado de reina: Bueno
                                    <br>
                                    Trabajo realizado: Cortar alas a reina
                                </div>
                                <div class="timeline-footer">
                                    <a class="btn btn-primary btn-xs">Ver inspección</a>
                                </div>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

    </div>

</section>
{% endblock %}





