{% extends 'ColmenappPlataformaBundle::layout.html.twig' %}

{% block page_title %}
    <h1 class="page-header">
        <i class="fa fa-fw fa-eye"></i> Inspección de Colmena
        <small>Colmena 12</small>
    </h1>
    <br>

{% endblock %}

{% block page_subtitle %}
{% endblock %}

{% block avanzu_breadcrumb %}
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Panel de Control</a></li>
        <li><a href="#"><i class="fa fa-eye"></i> Inspección de Colmena</a></li>
        <li onclick="history.go(-1);"><a href="#"><i class="fa fa-archive"></i> Colmena</a></li>

    </ol>
{% endblock %}

{% block page_content %}
    <section ng-controller="inspeccionController">
        <div class="row">
            <div class="col-md-10">
                <div class="box">
                    <div class="box-header">
                        <a href="" data-toggle="modal" data-target=".modal-nuevo-nucleo">
                            <button type="button" class="btn btn-primary btn-sm">
                                <i class="fa fa-fw fa-plus"></i> Nueva Inspección
                            </button>
                        </a>
                        <div class="box-tools">
                            <div class="input-group input-group-sm" style="width: 150px;">
                                <input type="text" name="table_search" class="form-control pull-right" placeholder="Buscar">

                                <div class="input-group-btn">
                                    <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                                </div>
                            </div>
                        </div>
                        <br>
                        <br>
                    </div>
                    <div class="box-body no-padding">
                        <table class="table table-striped">
                            <tbody><tr>
                                <th>Fecha</th>
                                <th>Nro. de abejas</th>
                                <th>Existencia de Crías</th>
                                <th>Agresividad</th>
                                <th>Colmena Observada</th>
                                <th>Observaciones</th>
                                <th>Ver</th>
                            </tr>
                            <tr>
                                <td>23-11-2016</td>
                                <td>300</td>
                                <td>Si</td>
                                <td><span class="badge bg-blue">Baja</span></td>
                                <td><small class="label bg-yellow"><i class="fa fa-fw fa-exclamation"></i></small></td>
                                <td>Puesta en observación, mortandad de la colonia alta</td>
                                <td>
                                    <a href="#">
                                        <i class="fa fa-fw fa-eye"></i>
                                    </a>
                                </td>
                            </tr>
                            <tr>
                                <td>12-10-2016</td>
                                <td>360</td>
                                <td>Si</td>
                                <td><span class="badge bg-yellow">Media</span></td>
                                <td>No</td>
                                <td>Ninguna</td>
                                <td>
                                    <a href="#">
                                        <i class="fa fa-fw fa-eye"></i>
                                    </a>
                                </td>
                            </tr>
                            <tr>
                                <td>09-09-2016</td>
                                <td>330</td>
                                <td>Si</td>
                                <td><span class="badge bg-red">Alta</span></td>
                                <td><small class="label bg-yellow"><i class="fa fa-fw fa-exclamation"></i></small></td>
                                <td>Cámara de cría dañada</td>
                                <td>
                                    <a href="#">
                                        <i class="fa fa-fw fa-eye"></i>
                                    </a>
                                </td>
                            </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <div class="modal fade modal-default modal-ver-observaciones" >
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">×</span></button>
                        <h4 class="modal-title">Observación</h4>
                    </div>
                    <div class="modal-body">
                        <p>
                            Alguna observación
                        </p>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Cerrar</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>



        <div class="modal fade modal-default modal-nuevo-nucleo" >
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">×</span></button>
                        <h4 class="modal-title">Nueva Inspección de Colmena</h4>
                    </div>
                    <div class="modal-body">

                        <form class="form-horizontal">
                            <div class="box-body">
                                <div class="form-group">
                                    <label for="inputEmail3" class="col-sm-2 control-label">Fecha</label>
                                    <div class="col-sm-10">
                                        <input type="email" class="form-control" disabled id="inputEmail3" placeholder="10-09-2016">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="inputEmail3" class="col-sm-2 control-label">Apiario</label>
                                    <div class="col-sm-10">
                                        <select class="form-control">
                                            <option>Los Algarrobos</option>
                                            <option>Agua Blanca</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="inputEmail3" class="col-sm-2 control-label">Fecha Envío</label>
                                    <div class="col-sm-10">
                                        <input type="email" class="form-control" id="inputEmail3">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="inputEmail3" class="col-sm-2 control-label">Mensaje</label>
                                    <div class="col-sm-10">
                                        <textarea class="form-control" rows="3" placeholder="Ingrese mensaje..."></textarea>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="inputEmail3" class="col-sm-2 control-label">Observ.</label>
                                    <div class="col-sm-10">
                                        <textarea class="form-control" rows="3" placeholder="Ingrese observaciones"></textarea>
                                    </div>
                                </div>
                            </div>
                        </form>

                        <div class="modal-footer">
                            <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Cerrar</button>
                            <button type="button" class="btn btn-primary">Guardar</button>
                        </div>
                    </div>

                </div>
                <!-- /.modal-content -->
            </div>
            <!-- /.modal-dialog -->
        </div>
    </section>
{% endblock %}




