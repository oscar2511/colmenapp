{% extends 'ColmenappPlataformaBundle::layout.html.twig' %}


{% block page_title %}
    <h2 class="page-header">
        <i class="fa fa-archive"></i>  Listado de Colmenas
    </h2>
{% endblock %}

{% block page_subtitle %}
{% endblock %}

{% block avanzu_breadcrumb %}
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#"><i class="fa fa-archive"></i>Listado de Colmenas</a></li>
    </ol>
{% endblock %}

{% block page_content %}
    <section ng-controller="colmenaController">
        <div class="row">
            <div class="col-md-10">
                <a href="" data-toggle="modal" data-target=".modal-nueva-colmena">
                    <button type="button" class="btn btn-primary btn-sm">
                        <i class="fa fa-fw fa-plus"></i> Nueva Colmena
                    </button>
                </a>
            </div>
        </div>
        <br>
        <br>
        <div class="row">
            <toaster-container></toaster-container>
            <div id="loading-bar-container"></div>
            <div class="col-md-10">
                <div class="box box-info">
                    <div class="box-body no-padding">
                        {% verbatim %}
                        <div class="table table-striped" style="height:283px!important;"  ui-grid="gridOptionsColmena" ui-grid-pagination></div>
                        {% endverbatim %}
                    </div>
                </div>
            </div>
        </div>

        <div class="modal fade modal-default modal-nueva-colmena" >
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">×</span></button>
                        <h4 class="modal-title">Nueva Colmena</h4>
                    </div>
                    <div class="modal-body">
                        <form class="form-horizontal" name="colmenaForm" novalidate>
                            <div class="box-body">
                                <div class="form-group">
                                    <label class="col-sm-2 control-label">Fecha</label>
                                    <div class="col-sm-10">
                                        <input type="email" class="form-control" disabled id="inputEmail3" placeholder="10-09-2016">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="inputEmail3" class="col-sm-2 control-label">Nombre</label>
                                    <div class="col-sm-10">
                                        <input type="text" ng-model="colmenaForm.nombre" name="subject" class="form-control" id="inputEmail3" placeholder="Ingrese nombre" required>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label  type="text" class="col-sm-2 control-label">Dirección</label>
                                    <div class="col-sm-10">
                                        <input type="text" ng-model="colmenaForm.direccion" class="form-control"  placeholder="Ingrese dirección">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="inputEmail3" class="col-sm-2 control-label">Observ.</label>
                                    <div class="col-sm-10">
                                        <textarea ng-model="colmenaForm.observacion" class="form-control" rows="3" placeholder="Ingrese observación"></textarea>
                                    </div>
                                </div>
                            </div>
                        </form>

                        <div class="modal-footer">
                            <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Cerrar</button>
                            <button data-dismiss="modal" ng-click="guardarColmena(colmenaForm)" ng-disabled="colmenaForm.$invalid" type="button" class="btn btn-primary">Guardar</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div ng-if="editar" class="modal fade modal-default modal-editar-colmena">
            {% include 'ColmenappPlataformaBundle:Colmena:editar.html.twig' %}
        </div>


    </section>








