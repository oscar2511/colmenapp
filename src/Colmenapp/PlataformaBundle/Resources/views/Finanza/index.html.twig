{% extends 'ColmenappPlataformaBundle::layout.html.twig' %}

{% block page_title %}
<h2 class="page-header">
    <i class="fa fa-fw fa-calculator"></i> Listado de Movimientos
</h2>
{% endblock %}

{% block page_subtitle %}
{% endblock %}

{% block avanzu_breadcrumb %}
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Inicio</a></li>
        <li><a href="#"><i class="fa fa-fw fa-calculator"></i> Finanzas</a></li>
    </ol>
{% endblock %}

{% block page_content %}
<section ng-controller="finanzaController">
    <div class="row">
        <div class="col-md-10">
            <div class="box">
                <div class="box-header">
                    <a href="" data-toggle="modal" data-target=".modal-nuevo-movimiento">
                        <button type="button" class="btn btn-primary btn-sm">
                            <i class="fa fa-fw fa-plus"></i> Agregar movimiento
                        </button>
                    </a>
                </div>
                <!-- /.box-header -->
                <div class="box-body no-padding">
                    <table class="table table-striped">
                        <tbody>
                        <tr>
                            <th>Nro.</th>
                            <th>Fecha</th>
                            <th>Apiario</th>
                            <th>Tipo</th>
                            <th>Concepto</th>
                            <th>Monto</th>
                            <th>Observaciones</th>
                            <th>Estado</th>
                            <th>Editar</th>
                            <th>Ver</th>
                        </tr>
                        <tr>
                            <td><a href="{{ path('apiario_detalle') }}">1</a></td>
                            <th>12-09-2016</th>
                            <td>Los Algarrobos</td>
                            <td><span class="badge bg-green">Ingreso</span></td>
                            <td>Venta de núcleo</td>
                            <td>$581</td>
                            <td>Ninguna</td>
                            <td>Pendiente</td>
                            <td><a href="{{ path('apiario_detalle') }}">
                                    <i class="fa fa-fw fa-pencil-square-o"></i>
                                </a>
                            </td>
                            <td>
                                <a href="{{ path('apiario_detalle') }}">
                                    <i class="fa fa-fw fa-eye"></i>
                                </a>
                            </td>
                        </tr>
                        <tr>
                            <td><a href="{{ path('apiario_detalle') }}">1</a></td>
                            <th>15-10-2016</th>
                            <td>Los Algarrobos</td>
                            <td><span class="badge bg-red">Egreso</span></td>
                            <td>Compra de cera</td>
                            <td>$1255</td>
                            <td>Ninguna</td>
                            <td>Pagado</td>
                            <td><a href="{{ path('apiario_detalle') }}">
                                    <i class="fa fa-fw fa-pencil-square-o"></i>
                                </a>
                            </td>
                            <td>
                                <a href="{{ path('apiario_detalle') }}">
                                    <i class="fa fa-fw fa-eye"></i>
                                </a>
                            </td>
                        </tr>
                        <tr>
                            <td><a href="{{ path('apiario_detalle') }}">2</a></td>
                            <th>10-09-2016</th>
                            <td>Los Algarrobos</td>
                            <td><span class="badge bg-green">Ingreso</span></td>
                            <td>Venta de núcleo</td>
                            <td>$790</td>
                            <td>Ninguna</td>
                            <td>Cobrado</td>
                            <td><a href="{{ path('apiario_detalle') }}">
                                    <i class="fa fa-fw fa-pencil-square-o"></i>
                                </a>
                            </td>
                            <td>
                                <a href="{{ path('apiario_detalle') }}">
                                    <i class="fa fa-fw fa-eye"></i>
                                </a>
                            </td>
                        </tr>
                        </tbody></table>
                </div>
                <!-- /.box-body -->
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4">
            <div class="box box-success">
                <div class="box-header">
                    <h3 class="box-title">Ingresos</h3>
                </div>
                <div class="box-body">
                    <canvas id="line"
                            class="chart chart-line"
                            chart-data             = "dataIngresos"
                            chart-labels           = "labelsIngresos"
                            chart-options          = "options"
                            chart-dataset-override = "datasetOverride"
                            chart-click            = "onClickIngresos">
                    </canvas>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="box box-success">
                <div class="box-header">
                    <h3 class="box-title">Egresos</h3>
                </div>
                <div class="box-body">
                    <canvas id="line"
                            class="chart chart-line"
                            chart-data             = "dataEgresos"
                            chart-labels           = "labelsEgresos"
                            chart-options          = "options"
                            chart-dataset-override = "datasetOverride"
                            chart-click            = "onClickEgresos">
                    </canvas>
                </div>
            </div>
        </div>
    </div>


    <div class="modal fade modal-default modal-nuevo-movimiento" >
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span></button>
                    <h4 class="modal-title">Registrar movimiento</h4>
                </div>
                <div class="modal-body">

                    <form class="form-horizontal">
                        <div class="box-body">
                            <div class="form-group">
                                <label for="inputEmail3" class="col-sm-2 control-label">Fecha</label>
                                <div class="col-sm-10">
                                    <input type="email" class="form-control" disabled id="inputEmail3" placeholder="10-09-2016">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="inputEmail3" class="col-sm-2 control-label">Apiario</label>
                                <div class="col-sm-10">
                                    <select class="form-control">
                                        <option></option>
                                        <option>Los Algarrobos</option>
                                        <option>Agua Blanca</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="inputEmail3" class="col-sm-2 control-label">Tipo</label>
                                <div class="col-sm-10">
                                    <select class="form-control">
                                        <option>Ingreso</option>
                                        <option>Egreso</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="inputEmail3" class="col-sm-2 control-label">Concepto</label>
                                <div class="col-sm-10">
                                    <input type="email" class="form-control" id="inputEmail3" placeholder="Ingrese concepto..">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="inputEmail3" class="col-sm-2 control-label">Monto</label>
                                <div class="col-sm-10">
                                    <input type="email" class="form-control" id="inputEmail3" placeholder="Ingrese monto">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="inputEmail3" class="col-sm-2 control-label">Obs.</label>
                                <div class="col-sm-10">
                                    <textarea class="form-control" rows="3" placeholder="Ingrese observaciones"></textarea>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="inputEmail3" class="col-sm-2 control-label">Estado</label>
                                <div class="col-sm-10">
                                    <select class="form-control">
                                        <option>Pagado</option>
                                        <option>Pendiente de pago</option>
                                        <option>Cobrado</option>
                                        <option>Pendiente de cobro</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </form>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Cerrar</button>
                        <button type="button" class="btn btn-primary">Guardar</button>
                    </div>
                </div>

            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>

</section>
{% endblock %}




