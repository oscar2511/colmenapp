{% block title %}
    ColmenApp
{% endblock %}

{% block avanzu_admin_header %}
    <header class="main-header">
        {% block avanzu_logo %}
            <a href="#" class="logo">
                <img src="{{ asset('bundles/colmenappplataforma/colmenapp/img/logo-colmenapp.png') }}" height="35" width="35" />
                {{ block('title') }}
            </a>
        {% endblock %}
        <!-- Header Navbar: style can be found in header.less -->
        <nav class="navbar navbar-static-top" role="navigation">
            <!-- Sidebar toggle button-->
            <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
                <span class="sr-only">Toggle navigation</span>
            </a>
                <div class="navbar-custom-menu">
                    <ul class="nav navbar-nav">
                        {% block avanzu_navbar %}
                            <li class="dropdown user user-menu">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                                    <i class="fa fa-angle-down" aria-hidden="true"></i>
                                    <img width="18" height="18" src="{{ asset('img/user-icon.png') }}" />
                                    <span class="hidden-xs">Oscar Rodríguez</span>
                                </a>
                                <ul class="dropdown-menu">
                                    <!-- User image -->
                                    <li class="user-header">
                                        <img src="{{ asset('img/user-icon.png') }}" />
