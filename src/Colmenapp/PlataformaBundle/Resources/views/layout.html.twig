                                            Oscar Rodríguez - Administrador
                                            <small>Miembro desde 15 nov de 2015</small>
                                        </p>
                                    </li>
                                    <!-- Menu Body -->
                                    <li class="user-body">
                                        <div class="col-4 text-center">
                                            <a href="#">Último login 22-04-2016</a>
                                        </div>
                                    </li>
                                    <!-- Menu Footer-->
                                    <li class="user-footer">
                                        <div class="pull-left">
                                            <a href="#" class="btn btn-default btn-flat">Perfil</a>
                                        </div>
                                        <div class="pull-right">
                                            <a href="#" class="btn btn-default btn-flat">Salir</a>
                                        </div>
                                    </li>
                                </ul>
                            </li>
                        {% endblock %}
                    </ul>
                </div>
        </nav>
    </header>
{% endblock %}

{% set name = app.request.attributes.get('_name') %}
{% block avanzu_sidebar %}
    <div class="sidebar">
        <!-- user panel (Optional) -->
        <div class="user-panel">

        </div><!-- /.user-panel -->

        <!-- Search Form (Optional) -->
        <form action="#" method="get" class="sidebar-form">
            <div class="input-group">
                <input type="text" name="q" class="form-control" placeholder="Search...">
        <span class="input-group-btn">
          <button type="submit" name="search" id="search-btn" class="btn btn-flat"><i class="fa fa-search"></i></button>
        </span>
            </div>
        </form><!-- /.sidebar-form -->

        <!-- Sidebar Menu -->
        <ul class="sidebar-menu">
            <li class="header">Menu</li>
            <li class=" {% if app.request.attributes.get('_name') == 'home' %}active{% endif %}">
                <a href="{{ path('colmenapp_plataforma_homepage') }}"><i class="fa fa-tachometer" aria-hidden="true"></i><span>Panel de Control</span></a>
            </li>
            <li class="treeview {% if app.request.attributes.get('_name') == 'apiario' %}active{% endif %}">
                <a href="{{ path('apiario') }}"><i class="fa fa-cubes" aria-hidden="true"></i>
                    <span>Apiarios</span><i class="fa fa-angle-left pull-right" aria-hidden="true"></i>
                </a>
                <ul class="treeview-menu">
                    <li><a href="#"><i class="fa fa-fw fa-plus"></i>
                            Crear Apiario
                        </a>
                    </li>
                    <li class="{% if app.request.attributes.get('_name') == 'apiario' %}active{% endif %}">
                        <a href="{{ path('apiario') }}">
                            <i class="fa fa-fw fa-eye"></i> Ver Apiarios
                        </a>
                    </li>
                </ul>
            </li>
            <li class="treeview {% if app.request.attributes.get('_name') == 'colmena' %}active{% endif %}">
                <a href="{{ path('colmena') }}"><i class="fa fa-archive" aria-hidden="true"></i>
                    <span>Colmenas</span><i class="fa fa-angle-left pull-right" aria-hidden="true"></i>
                </a>
                <ul class="treeview-menu">
                    <li><a href="#"><i class="fa fa-fw fa-plus"></i> Crear Colmena</a></li>
                    <li><a href="{{ path('colmena') }}"><i class="fa fa-fw fa-eye"></i> Ver Colmenas</a></li>
                </ul>
            </li>
            <li class=" {% if app.request.attributes.get('_name') == 'alimentacion' %}active{% endif %}">
                <a href="{{ path('alimentacion') }}"><i  class="fa fa-cutlery" aria-hidden="true"></i>
                    <span>Alimentación</span>
                </a>
            </li>
            <li class=" {% if app.request.attributes.get('_name') == 'tratamiento' %}active{% endif %}">
                <a href="{{ path('tratamiento') }}"><i  class="fa fa-flask" aria-hidden="true"></i>
                    <span>Tratamientos</span>
                </a>
            </li>
            <li class=" {% if app.request.attributes.get('_name') == 'nucleo' %}active{% endif %}">
                <a href="{{ path('nucleo') }}"><i class="fa fa-fw fa-cube" aria-hidden="true"></i>
                    <span>Núcleos</span>
                </a>
            </li>
            <li class=" {% if app.request.attributes.get('_name') == 'produccion' %}active{% endif %}">
                <a href="{{ path('produccion') }}"><i class="fa fa-fw fa-industry" aria-hidden="true"></i>
                    <span>Producción</span>
                </a>
            </li>
            <li><a href="#"><i class="fa fa-fw fa-eye"></i><span>Inspecciones</span></a></li>
            <li><a href="#"><i class="fa fa-fw fa-eye"></i><span>Tareas Programadas</span></a></li>
            <li class="treeview {% if app.request.attributes.get('_name') == 'finanzas' %}active{% endif %}">
                <a href="{{ path('finanza') }}"><i class="fa fa-fw fa-calculator"></i><span>Finanzas</span><i class="fa fa-angle-left pull-right"></i></a>
                <ul class="treeview-menu">
                    <li><a href="{{ path('finanza') }}"><i class="fa fa-fw fa-eye"></i> Ver movimientos</a></li>
                </ul>
            </li>
            <li class="treeview">
                <a href="#"><i class="fa fa-bar-chart" aria-hidden="true"></i><span>Reportes y Estadísticas</span> <i class="fa fa-angle-left pull-right"></i></a>
                <ul class="treeview-menu">
                    <li><a href="#">Estadísticas</a></li>
                    <li><a href="#">Reportes</a></li>
                </ul>
            </li>
            <li class="treeview">
                <a href="#"><span class="glyphicon glyphicon-bullhorn"></span><span>Alertas</span> <i class="fa fa-angle-left pull-right"></i></a>
                <ul class="treeview-menu">
                    <li><a href="{{ path('alerta') }}"><i class="fa fa-fw fa-plus"></i> Nueva Alerta</a></li>
                    <li><a href="{{ path('alerta') }}"><i class="fa fa-fw fa-eye"></i> Ver alertas</a></li>
                </ul>
            </li>
