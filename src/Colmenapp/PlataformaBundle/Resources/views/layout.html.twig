{% extends 'AvanzuAdminThemeBundle:layout:base-layout.html.twig' %}

{%  block javascripts_head %}
     {{ parent() }}
{% endblock  %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('bundles/avanzuadmintheme/static/'~ app.environment ~'/styles/admin-lte-all.css') }}" />
{% endblock %}

{% block title %}
    Colmenapp
{% endblock %}

{% block avanzu_admin_header %}
    <header class="main-header">
        {% block avanzu_logo %}
            <a href="#" class="logo">
                <!-- Add the class icon to your logo image or logo icon to add the margining -->
                {{ block('title') }}
            </a>
        {% endblock %}
        <!-- Header Navbar: style can be found in header.less -->
        <nav class="navbar navbar-static-top" role="navigation">
            <!-- Sidebar toggle button-->
            <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
                <span class="sr-only">Toggle navigation</span>
            </a>
                <div class="navbar-custom-menu">
                    <ul class="nav navbar-nav">
                        {% block avanzu_navbar %}
                            <li class="dropdown user user-menu">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                                    <i class="fa fa-angle-down" aria-hidden="true"></i>
                                    <img width="18" height="18" src="{{ asset('img/user-icon.png') }}" />
                                    <span class="hidden-xs">Oscar Rodríguez</span>
                                </a>
                                <ul class="dropdown-menu">
                                    <!-- User image -->
                                    <li class="user-header">
                                        <img src="{{ asset('img/user-icon.png') }}" />
                                        <p>
                                            Oscar Rodríguez - Administrador
                                            <small>Miembro desde 15 nov de 2015</small>
                                        </p>
                                    </li>
                                    <!-- Menu Body -->
                                    <li class="user-body">
                                        <div class="col-4 text-center">
                                            <a href="#">Último login 22-04-2016</a>
                                        </div>
                                    </li>
                                    <!-- Menu Footer-->
                                    <li class="user-footer">
                                        <div class="pull-left">
                                            <a href="#" class="btn btn-default btn-flat">Perfil</a>
                                        </div>
                                        <div class="pull-right">
                                            <a href="#" class="btn btn-default btn-flat">Salir</a>
                                        </div>
                                    </li>
                                </ul>
                            </li>
                        {% endblock %}
                    </ul>
                </div>
        </nav>
    </header>
{% endblock %}


{% block avanzu_sidebar %}
    <div class="sidebar">
        <!-- user panel (Optional) -->
        <div class="user-panel">

        </div><!-- /.user-panel -->

        <!-- Search Form (Optional) -->
        <form action="#" method="get" class="sidebar-form">
            <div class="input-group">
                <input type="text" name="q" class="form-control" placeholder="Search...">
        <span class="input-group-btn">
          <button type="submit" name="search" id="search-btn" class="btn btn-flat"><i class="fa fa-search"></i></button>
        </span>
            </div>
        </form><!-- /.sidebar-form -->

        <!-- Sidebar Menu -->
        <ul class="sidebar-menu">
            <li class="header">Menu</li>
            <li class="active"><a href="{{ path('colmenapp_plataforma_homepage') }}"><i class="fa fa-tachometer" aria-hidden="true"></i><span>Dashboard</span></a></li>
            <li><a href="#"><i class="fa fa-cubes" aria-hidden="true"></i><span>Apiario</span></a></li>
            <li><a href="{{ path('colmena') }}"><i class="fa fa-archive" aria-hidden="true"></i><span>Colmena</span></a></li>
            <li><a href="#"><i class="fa fa-cubes" aria-hidden="true"></i><span>Alimentos</span></a></li>
            <li class="treeview">
                <a href="#"><i class="fa fa-bar-chart" aria-hidden="true"></i><span>Reportes y Estadísticas</span> <i class="fa fa-angle-left pull-right"></i></a>
                <ul class="treeview-menu">
                    <li><a href="#">Estadísticas</a></li>
                    <li><a href="#">Reportes</a></li>
                </ul>
            </li>
        </ul><!-- /.sidebar-menu -->

    </div><!-- /.sidebar -->
{% endblock %}


{% block page_title %}
    Periodo de producción
{% endblock %}

{% block page_subtitle %}
    Subtitulo
{% endblock %}

{% block avanzu_breadcrumb %}
    {{ render(controller('AvanzuAdminThemeBundle:Breadcrumb:breadcrumb', {'request':app.request, 'title' : block('page_title')})) }}
{% endblock %}

{% block page_content %}
    contenido de la pagina
{% endblock %}


{% block avanzu_admin_footer %}
    <footer class="main-footer">
        <div class="pull-right hidden-xs">
            <b>Version</b> 0.1
        </div>
        <strong>Colmenapp Copyright &copy; 2016-2017 <a href="http://almsaeedstudio.com">Colmenapp.com</a>.</strong> Todos los derechos reservados.
    </footer>
{% endblock %}
