{% extends 'ColmenappPlataformaBundle::layout.html.twig' %}


{% block page_title %}
<h2 class="page-header">
    <i class="fa fa-fw fa-cubes"></i> Listado de Apiarios
</h2>
{% endblock %}

{% block page_subtitle %}
{% endblock %}

{% block avanzu_breadcrumb %}
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Inicio</a></li>
        <li><a href="#"><i class="fa fa-fw fa-cubes"></i> Apiario</a></li>
    </ol>
{% endblock %}

{% block page_content %}
<br>
    <section ng-controller="apiarioController">
    <div class="row">
        <div class="col-md-10">
            <div class="box">
                <div class="box-header">
                    <a href="" data-toggle="modal" data-target=".modal-nuevo-apiario">
                        <button type="button" class="btn btn-primary btn-sm">
                            <i class="fa fa-fw fa-plus"></i> Nuevo apiario
                        </button>
                    </a>
                    <div class="box-tools">
                        <div class="input-group input-group-sm" style="width: 150px;">
                            <input type="text" name="table_search" class="form-control pull-right" placeholder="Buscar">

                            <div class="input-group-btn">
                                <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.box-header -->
                <div class="box-body no-padding">
                    <table class="table table-striped">
                        <tbody>
                        <tr>
                            <th>Identificador</th>
                            <th>Nombre</th>
                            <th>Ubicación</th>
                            <th>Nro. Colmenas</th>
                            <th>Última visita</th>
                            <th>Observaciones</th>
                            <th>Estado</th>
                            <th>Ver</th>
                        </tr>
                        <tr>
                            <td><a href="{{ path('apiario_detalle') }}">1</a></td>
                            <td>Los Algarrobos</td>
                            <td>Chamical</td>
                            <td>57</td>
                            <td>20-11-2016</td>
                            <td>Ninguna</td>
                            <td><span class="badge bg-green">Activo</span></td>
                            <td>
                                <a href="{{ path('apiario_detalle') }}">
                                    <i class="fa fa-fw fa-eye"></i>
                                </a>
                            </td>
                        </tr>
                        <tr>
                            <td><a href="{{ path('apiario_detalle') }}">2</a></td>
                            <td>Agua Blanca</td>
                            <td>Chepes</td>
                            <td>63</td>
                            <td>19-10-2016</td>
                            <td>Ninguna</td>
                            <td><span class="badge bg-red">Inactivo</span></td>
                            <td>
                                <a href="{{ path('apiario_detalle') }}">
                                    <i class="fa fa-fw fa-eye"></i>
                                </a>
                            </td>
                        </tr>
                        </tbody></table>
                </div>
                <!-- /.box-body -->
            </div>
        </div>
    </div>



    <div class="modal fade modal-default modal-nuevo-apiario" >
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span></button>
                    <h4 class="modal-title">Nuevo apiario</h4>
                </div>
                <div class="modal-body">

                    <form class="form-horizontal" name="apiarioForm" novalidate>
                        <div class="box-body">
                            <div class="form-group">
                                <label class="col-sm-2 control-label">Fecha</label>
                                <div class="col-sm-10">
                                    <input type="email" class="form-control" disabled id="inputEmail3" placeholder="10-09-2016">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="inputEmail3" class="col-sm-2 control-label">Nombre</label>
                                <div class="col-sm-10">
                                    <input type="text" ng-model="apiarioForm.nombre" name="subject" class="form-control" id="inputEmail3" placeholder="Ingrese nombre" required>
                                </div>
                            </div>
                            <div class="form-group">
                                <label  type="text" class="col-sm-2 control-label">Dirección</label>
                                <div class="col-sm-10">
                                    <input type="text" ng-model="apiarioForm.direccion" class="form-control"  placeholder="Ingrese dirección">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="inputEmail3" class="col-sm-2 control-label">Observ.</label>
                                <div class="col-sm-10">
                                    <textarea ng-model="apiarioForm.observacion" class="form-control" rows="3" placeholder="Ingrese observación"></textarea>
                                </div>
                            </div>
                        </div>
                    </form>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Cerrar</button>
                        <button ng-click="guardarApiario(apiarioForm)" ng-disabled="apiarioForm.$invalid" type="button" class="btn btn-primary">Guardar</button>
                    </div>
                </div>

            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>
    </section>

{% endblock %}




